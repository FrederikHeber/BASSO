// the configured options and settings for Basso
#define Basso_VERSION_MAJOR @Basso_VERSION_MAJOR@
#define Basso_VERSION_MINOR @Basso_VERSION_MINOR@

// global tolerance
#define BASSOTOLERANCE 1e-10

// transmit optional usage of math library
#cmakedefine USE_MYMATH

// does the platform provide exp and log functions?
#cmakedefine HAVE_LOG
#cmakedefine HAVE_EXP

// measure timing of each part of the algorithm
#cmakedefine USE_TIMINGS

// use NLopt for minimization
#cmakedefine NLOPT_FOUND

// use SVD to calculate real operator norm
#cmakedefine FULLMATRIXNORM

// MPI is used
#cmakedefine MPI_FOUND

// OPENMP is used
#cmakedefine OPENMP_FOUND
